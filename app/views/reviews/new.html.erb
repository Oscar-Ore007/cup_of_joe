<h1>Add a Review for <%= @review.coffee.flavor %> - <%= @review.coffee.brand.name %></h1>

<%= form_for(@review) do |f| %>
    <div>
    <%= f.label :stars %>
    <%= f.number_field :stars, min:0, max:5 %>
    </div>
    <br>
    <div>
    <%= f.label :title %>
    <%= f.text_field :title %> 
    </div>
    <br>
    <div>
    <%= f.label :content %>
    <%= f.text_area :content, size: "25x10" %>
    </div>
    <br>
    <%= f.hidden_field :coffee_id %>

    <%= f.submit %>

    <% end %>